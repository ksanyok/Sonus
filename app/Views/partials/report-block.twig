<div class="mb-8">
    <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
        <span class="inline-block w-3 h-3 rounded-full bg-{{ badge }}-500 mr-2"></span>
        {{ title }}
    </h3>
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Критерий</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Макс</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Факт</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Цитата</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Таймкод</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Комментарий</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for item in items %}
                <tr class="{{ loop.index is odd ? 'bg-white' : 'bg-gray-50' }}">
                    <td class="px-6 py-4 text-sm font-medium text-gray-900">{{ item.title }}</td>
                    <td class="px-6 py-4 text-sm text-gray-500">{{ item.max ?? '-' }}</td>
                    <td class="px-6 py-4 text-sm">
                        {% if item.score is defined %}
                            <span class="font-semibold {{ item.score >= (item.max * 0.8) ? 'text-green-600' : (item.score >= (item.max * 0.5) ? 'text-yellow-600' : 'text-red-600') }}">
                                {{ item.score }}
                            </span>
                        {% elseif item.violation is defined %}
                            <span class="font-semibold {{ item.violation ? 'text-red-600' : 'text-green-600' }}">
                                {{ item.violation ? '⚠️ Порушення' : '✅ OK' }}
                            </span>
                        {% else %}
                            -
                        {% endif %}
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-700 max-w-md">
                        {% if item.evidence %}
                            <div class="space-y-1">
                                {% for ev in item.evidence %}
                                    <p class="italic">"{{ ev.text|slice(0, 100) }}{{ ev.text|length > 100 ? '...' : '' }}"</p>
                                {% endfor %}
                            </div>
                        {% else %}
                            -
                        {% endif %}
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-500">
                        {% if item.evidence %}
                            {% for ev in item.evidence %}
                                <div>{{ ev.t|number_format(1) }}s</div>
                            {% endfor %}
                        {% elseif item.timestamps %}
                            {% for t in item.timestamps %}
                                <div>{{ t|number_format(1) }}s</div>
                            {% endfor %}
                        {% else %}
                            -
                        {% endif %}
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-600 max-w-xs">{{ item.comment ?? '-' }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
